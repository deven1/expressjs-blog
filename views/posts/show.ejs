<header class="page-header text-center">
  <h1>
    <%= post.title %>
    <small>
      <br>
      Posted on: <%= new Date(post.createdAt).toDateString() %>
      <br>
      by <%= post.author %>
    </small>
  </h1>
</header>

<img class="img-responsive center-block" src="<%= post.image %>" alt="Image">

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">

    <blockquote>
      <%= post.body %>
      <br><br>
      - <%= post.author %>
    </blockquote>

  </div>

  <!-- Comments -->
  <div class="col-xs-8 col-xs-offset-2">

    <h2>Comments</h2>

    <form id="comment-form">
      <div class="form-group">
        <input type="text" placeholder="Author" class="form-control" name="author" id="author">
      </div>
      <div class="form-group">
        <textarea class="form-control" placeholder="Comment" name="body" id="body"></textarea>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-success" value="Submit">
      </div>
    </form>

  </div>

  <div id="comments" class="col-xs-8 col-xs-offset-2">
    <p id="no-comments" class="text-danger">No comments yet</p>
  </div>
</div>

